{
  "name": "fleetform",
  "description": "A docker container infrastructure as code cli tool.",
  "version": "1.3.0",
  "main": "dist/index.js",
  "author": "majo418",
  "license": "MIT",
  "private": false,
  "keywords": [
    "node",
    "typescript",
    "cli",
    "cmd",
    "docker",
    "container",
    "iac",
    "infrastructure",
    "fleetform",
    "ff"
  ],
  "bin": {
    "ff": "./bin/ff",
    "ffdev": "./bin/ffdev"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "exec": "node dist/index.js",
    "tsc": "tsc -p tsconfig.json",
    "test": "mocha --require ts-node/register src/test/**/*.test.ts",
    "build": "npm run tsc",
    "start:watch": "nodemon --ext \"*.ts\" -w \"${PWD}/src/**/*\" -x \"npm run start\"",
    "build:watch": "nodemon --ext \"*.ts\" -w \"${PWD}/src/**/*\" -x \"npm run build\"",
    "test:watch": "nodemon -w \"${PWD}/src/**/*\" -x \"npm run test\"",
    "exec:watch": "nodemon -w \"${PWD}/dist/**/*\" -x \"npm run exec\"",
    "dev": "npm run start:watch"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dockerode": "^3.3.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.26",
    "nodemon": "^2.0.13",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "cmdy": "^1.0.0",
    "cors": "^2.8.5",
    "docker-modem": "^3.0.3",
    "dockerode": "^3.3.1",
    "express": "^4.17.3"
  }
}