{
  "name": "fleetform",
  "version": "1.2.8",
  "description": "A docker container infrastructure as code cli tool.",
  "main": "dist/index.js",
  "author": "HalsMaulMajo",
  "license": "MIT",
  "private": false,
  "tags": [
    "docker",
    "container",
    "iac",
    "infrastructure",
    "fleetform",
    "typescript",
    "cli"
  ],
  "bin": {
    "ff": "./bin/ff",
    "ffdev": "./bin/ffdev"
  },
  "scripts": {
    "dev": "nodemon --ext '*.ts' -w ${PWD}/src -x 'npm run build; npm run start'",
    "start-watch": "nodemon -w ./resources -x 'npm run start'",
    "build-watch": "nodemon --ext '*.ts' -w ${PWD}/src -x 'npm run build'",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "tsnode": "ts-node src/index.ts",
    "test": "echo 'No test exist!'",
    "release": "npm i -g npm@latest; npm up; npm run build; npm run test; npm publish"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.1",
    "@types/node": "^16.11.21",
    "nodemon": "^2.0.13",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "cmdy": "^1.0.0",
    "docker-modem": "^3.0.3",
    "dockerode": "^3.3.1"
  }
}